<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item 
        android:state_pressed="true">
        
        <shape android:shape="rectangle">
            <gradient 
                android:angle="90" 
                android:centerX="0.5" 
                android:centerY="0.5" 
				android:endColor="@color/color_checked" 
              	android:startColor="@color/color_checked" 
                android:type="linear" > 
            </gradient>
        </shape>
        
   	</item>
   	
    <item 
        android:state_pressed="false">
        
        <shape android:shape="rectangle">
            <gradient 
                android:angle="90" 
                android:centerX="0.5" 
                android:centerY="0.5" 
				android:endColor="@color/list_item_color2" 
              	android:startColor="@color/list_item_color2" 
                android:type="linear" > 
            </gradient>
        </shape>
        
   	</item>

</selector>