<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <size android:height="34dp"
                  android:width="48dp"/>
            <corners android:radius="17dp" />
            <gradient android:height="34dp" android:startColor="@color/color_checked" android:endColor="@color/color_checked"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="ring"
               android:innerRadius="0dp"
               android:innerRadiusRatio="1"
               android:thickness="16dp"
               android:thicknessRatio="2"
               android:useLevel="false">

            <stroke android:width="1px"
                    android:color="#bdbdbd"/>

            <solid android:color="#ffffffff" />

        </shape>
    </item>
</selector>